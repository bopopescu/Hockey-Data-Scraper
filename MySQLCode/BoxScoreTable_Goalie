use hockey_data;

drop table if exists boxscore_player ;

create table if not exists boxscore_player (
    game_id int not null,
    player_id int not null,
    team_id int not null,
    TOI time,
    assists int,
    goals int,
    shots int,
    saves int,
    ppSaves int,
    shSaves int,
    evenSaves int,
    savePercentage double,
    ppSavePercentage double,
    shSavePercentage double,
    esSavePercentage double

    foreign key (game_id) references schedule (game_id),
    foreign key (team_id) references teams(team_id)
)